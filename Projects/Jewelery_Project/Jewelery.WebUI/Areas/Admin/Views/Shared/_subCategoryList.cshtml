@model AdminViewModel

<section class="panel">
    <header class="panel-heading label-success">
    Alt Kategoriler
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Alt Kategori ID</th>
                        <th>Üst Kategori Adı</th>
                        <th>Maden Adı</th>
                        <th>Tip Adı</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subcategory in Model.SubCategoryList)
                    {
                        <tr id="tr-@subcategory.SubCategoryID">
                            <td>@subcategory.SubCategoryID</td>
                            <td>@subcategory.CategoryDTO.CategoryName</td>
                            <td>@subcategory.MineDTO.MineName</td>
                            @if (subcategory.GemDTO != null&&subcategory.GemID!=null)
                            {
                                <td>@subcategory.GemDTO.GemName</td>
                            }
                            else
                            {
                                <td>Yok</td>
                            }

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</section>
