@model NavbarViewModel

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading w3-deep-orange">
            Ürün Ekle
        </header>
        @using (Ajax.BeginForm("AddProduct", "AdminProduct",new AjaxOptions { OnSuccess = "result" }))
        {
            <div class="panel-body">
                <div class="form-horizontal tasi-form">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Ürün Adı</label>
                        <div class="col-lg-5">
                            <input type="text" placeholder="Ürün Adı Giriniz" name="name" class="form-control">
                          
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Açıklaması</label>
                        <div class="col-lg-5">
                            <input type="text" placeholder="Ürün Açıklaması Giriniz" name="description" class="form-control">
                            
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Birim Fiyatı</label>
                        <div class="col-lg-5">
                            <input type="text" class="spinner-input form-control" name="price">
                        </div>
                    </div>
                    <div class="form-group">

                        @*<div class="row">*@
                        <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Ürünün Satış Durumu</label>
                        <div class="col-lg-2">
                            <select name="isactive" class="form-control">
                                <option value="true">Aktif</option>
                                <option value="false">Pasif</option>
                            </select>
                        </div>
                        <div class="col-lg-2">
                            <input type="text" class="form-control" name="discount" placeholder="İndirim Oranı">
                        </div>
                        <div class="col-lg-2">
                            <input type="text" class="form-control" name="weight" placeholder="Ürün Ağırlığı">
                        </div>
                        <div class="col-lg-3">
                            <input type="text" class="form-control" name="stock" placeholder="Stok Sayısı">
                        </div>

                        @*</div>*@
                    </div>
                    <div class="col-lg-offset-2 col-md-offset-2">
                        <div class="col-lg-3 col-md-3">
                            <select name="category" class="form-control m-bot15">
                                <option>Kategori Seçiniz</option>
                                @foreach (var item in Model.CategoryList)
                                {

                                    <option value="@item.CategoryID">@item.CategoryName</option>

                                }

                            </select>
                        </div>
                        <div class="col-lg-3 col-md-3">
                            <select name="mine" class="form-control m-bot15">
                                <option>Maden Özelliği Seçiniz</option>
                                @foreach (var item in Model.MineList)
                                {
                                    <option value="@item.MineID">@item.MineName</option>
                                }
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-3">
                            <select name="gem" class="form-control m-bot15">
                                <option value="">Tip ve Taş Özelliği Seçiniz</option>
                                @foreach (var item in Model.GemList)
                                {
                                    <option value="@item.GemID">@item.GemName</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="pull-right col-lg-5">
                            <button class="pull-right btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>

                    <div id="bilgi" class="col-md-6 col-lg-6 inline-block">
                    </div>
                </div>
            </div>
            
        }
    </section>
</div>


