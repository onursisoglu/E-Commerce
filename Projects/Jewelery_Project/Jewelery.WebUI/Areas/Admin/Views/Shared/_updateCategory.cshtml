@model CategoryDTO
<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading w3-deep-orange">
            Kategori Güncelle
        </header>
        @using (Ajax.BeginForm("CategoryUpdate", "AdminHome", new AjaxOptions { OnSuccess = "result" }))
        {
            <div class="panel-body">
                <div class="form-horizontal tasi-form">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Kategori Adı</label>
                        <div class="col-lg-5">
                            <input type="text" name="name" class="form-control" value="@Model.CategoryName">
                            <p class="help-block alert alert-warning"><span>* </span> Kategori Adı Boş Bırakılamaz.(MAX 50 Karakter...)</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Açıklaması</label>
                        <div class="col-lg-5">
                            <input type="text" value="@Model.Description" name="description" class="form-control">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="pull-right col-lg-5">
                            <button name="CategoryID" value="@Model.CategoryID" class="pull-right btn btn-danger" type="submit">Güncelle</button>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <label class="control-label">Durum</label>
                        <select name="isactive" class="form-control">
                            @if (Model.IsActive == true)
                            {
                                <option selected="selected" value="true">Aktif</option>
                                <option value="false">Pasif</option>
                            }
                            else
                            {
                                <option value="true">Aktif</option>
                                <option selected="selected"value="false">Pasif</option>
                            }
                        </select>
                    </div>

                    <div id="bilgi" class="col-md-6 col-lg-6 inline-block">
                    </div>
                </div>
            </div>

        }
    </section>

</div>
