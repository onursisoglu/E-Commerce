@model NavbarViewModel


<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading w3-deep-orange">
            Ürün Güncelle
        </header>
        @using (Ajax.BeginForm("ProductUpdate", "AdminProduct", new AjaxOptions { OnSuccess = "result" }))
        {
            <div class="panel-body">
                <div class="form-horizontal tasi-form">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Ürün Adı</label>
                        <div class="col-lg-5">
                            <input type="text"value="@Model.Product.ProductName" name="name" class="form-control">
                           
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Açıklaması</label>
                        <div class="col-lg-5">
                            <input type="text" value="@Model.Product.Description" name="description" class="form-control">
                           
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Birim Fiyatı</label>
                        <div class="col-lg-5">
                            <input type="text"value="@Model.Product.UnitPrice" class="spinner-input form-control" name="price">
                           
                        </div>
                    </div>
                    <div class="form-group">

                        @*<div class="row">*@
                        <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Ürünün Satış Durumu</label>
                        <div class="col-lg-2">
                            <label class="control-label">İndirim Oranı</label>
                            <select name="isactive" class="form-control">
                                <option value="true">Aktif</option>
                                <option value="false">Pasif</option>
                            </select>
                        </div>
                        
                        <div class="col-lg-2">
                            <label class="control-label">İndirim Oranı</label>
                            <input type="text" class="form-control" name="discount" value="@Model.Product.Discount">
                        </div>
                        
                        <div class="col-lg-2">
                            <label class="control-label">Ürün Ağırlığı</label>
                            <input type="text" class="form-control" name="weight" value="@Model.Product.Weight">
                        </div>
                        <div class="col-lg-3">
                            <label class="control-label">Stok</label>
                            <input type="text" class="form-control" name="stock" value="@Model.Product.UnitsInStock">
                        </div>

                        @*</div>*@
                    </div>
                    <div class="col-lg-offset-2 col-md-offset-2">
                        <div class="col-lg-3 col-md-3">
                            <select name="category" class="form-control m-bot15">

                                <option selected="">Kategori Seçiniz</option>
                                @foreach (var item in Model.CategoryList)
                                {
                                    
                                    if (Model.Product.SubCategoryDTO.CategoryID == item.CategoryID)
                                    {
                                        <option value="@item.CategoryID" selected="selected">@item.CategoryName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.CategoryID">@item.CategoryName</option>
                                    }



                                }

                            </select>
                        </div>
                        <div class="col-lg-3 col-md-3">
                            <select name="mine" class="form-control m-bot15">
                                <option>Maden Özelliği Seçiniz</option>
                                @foreach (var item in Model.MineList)
                                {
                                    if (Model.Product.SubCategoryDTO.MineID == item.MineID)
                                    {
                                        <option value="@item.MineID" selected="selected">@item.MineName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.MineID">@item.MineName</option>
                                    }

                                }
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-3">
                            <select name="gem" class="form-control m-bot15">
                                <option disabled selected value="">Tip ve Taş Özelliği Seçiniz</option>
                                @foreach (var item in Model.GemList)
                                {
                                    if (Model.Product.SubCategoryDTO.GemID == item.GemID)
                                    {
                                        <option value="@item.GemID" selected="selected">@item.GemName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.GemID">@item.GemName</option>
                                    }

                                }

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="pull-right col-lg-5">
                            <button name="ProductID"value="@Model.Product.ProductID" class="pull-right btn btn-danger" type="submit">Güncelle</button>
                        </div>
                    </div>

                    <div id="bilgi" class="col-md-6 col-lg-6 inline-block">
                    </div>
                </div>

            </div>
           
        }
    </section>
</div>
