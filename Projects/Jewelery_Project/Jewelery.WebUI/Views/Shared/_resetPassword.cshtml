@model CustomerInfoViewModel


@using (Html.BeginForm("ResetPass2", "Customer"))
{

    <div class="col-md-6 col-lg-6">

       <h3>Şifrenizi Güncelleyin</h3>
        <label>Yeni Şifreniz</label>
        @Html.PasswordFor(c=>c.Customer.Password)
        @Html.ValidationMessageFor(c => c.Customer.Password)
        <label>Yeni Şifre Tekrar</label>
        @Html.PasswordFor(c=>c.Customer.ComparePassword)
        @Html.ValidationMessageFor(c => c.Customer.ComparePassword)
        <input type="hidden"name="id" value="@Model.Customer.CustomerID"/>
        <input class="btn btn-md btn-success pull-right" type="submit" value="Kaydet">
    </div>
}    

